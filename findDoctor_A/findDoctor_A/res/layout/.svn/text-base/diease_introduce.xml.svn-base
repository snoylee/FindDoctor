<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_disease_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="肾管和输尿管结石"
                    android:textColor="@color/common_green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_disease_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是泌尿系的常见病。结石可见于肾、膀胱、输尿管和尿道的任何部位。但以肾与输尿管结石为常见。临床表现因结石所在部位不同而有异。"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_reason_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:clickable="true"
                    android:drawableRight="@drawable/mm_submenu_down"
                    android:text="病因" />

                <TextView
                    android:id="@+id/tv_disease_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:text="病因介绍"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_state_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:clickable="true"
                    android:drawableRight="@drawable/mm_submenu_down"
                    android:text="症状" />

                <TextView
                    android:id="@+id/tv_disease_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:text="症状介绍"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:clickable="true"
                    android:drawableRight="@drawable/mm_submenu_down"
                    android:text="建议科室：泌尿外科" />

                <LinearLayout
                    android:id="@+id/ll_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle" >

                    <Button
                        android:id="@+id/iv_register"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="预约挂号"
                        android:textColor="@color/white"
                        android:background="@drawable/button_middle_selector" />

                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/iv_online_ask"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="在线咨询"
                        android:textColor="@color/white"
                        android:background="@drawable/button_middle_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_treatment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:clickable="true"
                    android:drawableRight="@drawable/mm_submenu_down"
                    android:text="诊治" />

                <TextView
                    android:id="@+id/tv_disease_treatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:text="诊治介绍"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_drug_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:clickable="true"
                    android:drawableRight="@drawable/mm_submenu_down"
                    android:text="用药" />

                <TextView
                    android:id="@+id/tv_disease_drug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_all_circle"
                    android:text="用药介绍"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>