<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


	<LinearLayout 
		android:orientation="horizontal" android:layout_width="match_parent"
		android:background="@drawable/buttonbg"
		android:id="@+id/is_first_second"
		android:layout_height="50dp">

		<TextView  android:id="@+id/textView1"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="center"
			android:background="@drawable/a0_btnpopwindowedit_normal"
			android:textColor="@color/white"
			android:text="初诊"
			android:layout_weight="1">
		</TextView>


		<TextView android:gravity="center" android:id="@+id/textView2"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:text="复诊"
			android:layout_weight="1" android:textColor="@color/text_color"></TextView>
	</LinearLayout>

</LinearLayout>
