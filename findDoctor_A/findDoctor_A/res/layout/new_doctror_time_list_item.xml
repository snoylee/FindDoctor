<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
     <LinearLayout
         android:id="@+id/linear_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true" 
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size_small2"
        android:gravity="center"/>
        <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size_small2"
        android:gravity="center"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/linear_right"
        android:layout_toRightOf="@+id/linear_left"
        android:orientation="horizontal" >
          <Button
        android:id="@+id/btn_all"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_state_false"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/common_text_size_small"
        android:gravity="center"
        android:text="全天" />
          
          <Button
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_all_str"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_small"
        android:gravity="center"
        android:visibility="gone"
        android:text="--/--" />
          
        <Button
            android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_am"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_state_false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_small"
        android:gravity="center"
        android:visibility="gone"
        android:text="上午" />
        <Button
            android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_pm"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_state_false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_small"
        android:gravity="center"
        android:visibility="gone"
        android:text="下午" />
        
         <Button
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btn_night"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_state_false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_small"
        android:gravity="center"
        android:visibility="gone"
        android:text="晚上" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linear_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" 
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView
        android:id="@+id/tv_clinic_type"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_small3"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/tv_money"
        android:textColor="@color/red"
        android:textSize="@dimen/common_text_size_small2"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    

</RelativeLayout>
