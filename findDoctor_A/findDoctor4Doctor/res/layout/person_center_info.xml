<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relative_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bar_background"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_topbar_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_center_text_size" />

        <Button
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back_selector"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white" />
		<Button
	        android:id="@+id/btn_Edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="8dp"
	        android:text="修改"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:background="@drawable/post_selector" />

    </RelativeLayout>
    
    
    
        
    <RelativeLayout
        android:gravity="center_vertical"
           android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

                <RelativeLayout
            android:id="@+id/line_touxiang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:background="@drawable/ic_preference_person_left" >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/touxiang" />

            <TextView
                android:layout_below="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="王小名"
                android:id="@+id/tv_name"
                 />

        </RelativeLayout>
          </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/line_touxiang"
            android:orientation="vertical" >
            
              <TextView
                android:id="@+id/tv_sex"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
               android:layout_weight="1"
                android:background="@drawable/ic_preference_person_right_top"
                android:gravity="left"
                 />
            
            <TextView
                android:id="@+id/tv_positon"
                 android:layout_width="fill_parent"
                android:layout_height="0dp"
               android:layout_weight="1"
                android:background="@drawable/ic_preference_person_right_center"
                android:gravity="left"
                 />

                
            <TextView
                android:id="@+id/tv_hospital"
                 android:layout_width="fill_parent"
                android:layout_height="0dp"
               android:layout_weight="1"
                 android:background="@drawable/ic_preference_person_right_bottom"
                android:gravity="left" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >


       
        <TextView
            android:id="@+id/tv_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_preference_first_normal"
            android:text="科室" 
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/tv_speci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_preference_last_normal"
            android:text="擅长"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_preference_all_circle2"/>
    </LinearLayout>

</LinearLayout>